<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >

    <TextView
        android:id="@+id/action_bar_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/hind_vadodara"
        android:gravity="center"
        android:text="@string/feed_header_actionbar"
        android:textColor="@android:color/white"
        android:textSize="@dimen/action_bar_title_text_size"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/feed_share_button"
        android:layout_width="55dp"
        android:layout_height="@dimen/action_bar_button_height"
        android:layout_marginRight="@dimen/action_bar_margin_right"
        android:layout_gravity="center_vertical"
        android:background="@drawable/action_bar_custom_buttons"
        android:src="@drawable/icon_share2x"
        android:clickable="true"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:focusableInTouchMode="false"/>


</LinearLayout>