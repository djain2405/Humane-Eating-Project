<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >

    <TextView
        android:id="@+id/action_bar_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/action_bar_margin_left"
        android:layout_weight="1"
        android:fontFamily="@font/hind_vadodara"
        android:gravity="center"
        android:text="@string/take_action"
        android:textColor="@android:color/white"
        android:textSize="@dimen/action_bar_title_text_size"
        android:textStyle="bold" />

    <Button
        style="@style/HEP_ActionBarButton"
        android:id="@+id/invite_button"
        android:visibility="invisible"
        android:layout_width="60dp"
        android:layout_height="@dimen/action_bar_button_height"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/action_bar_margin_top"
        android:layout_marginBottom="@dimen/action_bar_margin_bottom"
        android:layout_marginRight="@dimen/action_bar_margin_right"
        android:layout_gravity="center_vertical"
        android:background="@drawable/action_bar_custom_buttons"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/take_action_actionbar_invite"
        android:textColor="@color/white"/>


</LinearLayout>