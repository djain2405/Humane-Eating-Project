<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="CUISINE"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:background="#E0E0E0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
    <Spinner
      android:id="@+id/spinnerCuisine"
      android:layout_width="fill_parent"
      android:background="@drawable/filter_spinner_background"
      android:layout_height="45dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="HUMANE STATUS"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:background="#ececec"
        android:textAppearance="?android:attr/textAppearanceMedium" />

     <Spinner
      android:id="@+id/spinnerHumaneStatus"
      android:layout_width="fill_parent"
      android:background="@drawable/filter_spinner_background"
      android:layout_height="45dp" />

      <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:paddingTop="20dp"
        android:text="PRICE"
        android:textAlignment="center"
        android:background="#efefef"
        android:textAppearance="?android:attr/textAppearanceMedium" />

       <Spinner
      android:id="@+id/spinnerPrice"
      android:layout_width="fill_parent"
      android:background="@drawable/filter_spinner_background"
      android:layout_height="45dp" />

       <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:paddingTop="20dp"
        android:text="DISTANCE"
        android:textAlignment="center"
        android:background="#efefef"
        android:textAppearance="?android:attr/textAppearanceMedium" />

       <Spinner
      android:id="@+id/spinnerDistance"
      android:layout_width="fill_parent"
      android:background="@drawable/filter_spinner_background"
      android:layout_height="45dp" />
       
        <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:paddingTop="20dp"
        android:text=""
        android:textAlignment="center"
        android:background="#efefef"
        android:textAppearance="?android:attr/textAppearanceMedium" />

         <Button
        android:id="@+id/buttonUpdateResults"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filter_update_results"
        android:text="Update Results"
        android:textColor="@android:color/white" />
         
          <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:paddingTop="20dp"
        android:text=""
        android:textAlignment="center"
        android:background="#efefef"
        android:textAppearance="?android:attr/textAppearanceMedium" />

         <Button
        android:id="@+id/buttonClearFilters"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filter_clear_filters"
        android:text="Clear Filters"
        android:textColor="@android:color/white" />
</LinearLayout>
