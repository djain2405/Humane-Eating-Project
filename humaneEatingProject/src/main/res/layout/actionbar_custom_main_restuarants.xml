<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
     <Button
         android:id="@+id/search"
         android:layout_width="@dimen/action_bar_button_height"
         android:layout_height="@dimen/action_bar_button_height"
         android:background="@drawable/action_bar_search_button"
         android:clickable="true"
         android:focusable="false"
         android:layout_marginTop="@dimen/action_bar_margin_top"
         android:layout_marginBottom="@dimen/action_bar_margin_bottom"
         android:layout_marginLeft="@dimen/action_bar_margin_left"
         android:layout_gravity="left|center_vertical"/>

    <android.support.v4.widget.Space
        android:layout_width="24dp"
        android:layout_height="0dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/action_bar_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_76"/>

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/action_bar_icon"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/action_bar_title_text_size"
            android:text="@string/app_text"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="24dp"
        android:layout_height="0dp"/>

    <Button
        style="@style/HEP_ActionBarButton"
        android:id="@+id/list"
        android:layout_width="50dp"
        android:layout_height="@dimen/action_bar_button_height"
        android:minWidth="0dp"
        android:background="@drawable/action_bar_custom_buttons"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="@dimen/action_bar_margin_top"
        android:layout_marginBottom="@dimen/action_bar_margin_bottom"
        android:layout_marginRight="@dimen/action_bar_margin_right"
        android:layout_gravity="center_vertical|right"
        android:text="@string/list" />
    
</LinearLayout>
