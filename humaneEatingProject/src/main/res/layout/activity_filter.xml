<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewCuisine"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/cuisine_type"
            android:textAlignment="center"
            android:background="#E0E0E0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"/>

    
        <Spinner
            android:id="@+id/spinnerCuisine"
            android:layout_width="fill_parent"
            android:background="@drawable/filter_spinner_background"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:spinnerMode="dialog"/>

        <TextView
            android:id="@+id/textViewHumanStatus"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/humane_status"
            android:textAlignment="center"
            android:background="#ececec"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"/>

        <Spinner
            android:id="@+id/spinnerHumaneStatus"
            android:layout_width="fill_parent"
            android:background="@drawable/filter_spinner_background"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/price_range"
            android:textAlignment="center"
            android:background="#efefef"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"/>

        <Spinner
            android:id="@+id/spinnerPrice"
            android:layout_width="fill_parent"
            android:background="@drawable/filter_spinner_background"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/distance_range"
            android:textAlignment="center"
            android:background="#efefef"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerDistance"
            android:layout_width="fill_parent"
            android:background="@drawable/filter_spinner_background"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/textViewRatings"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/filter_rating"
            android:textAlignment="center"
            android:background="#efefef"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <RatingBar
                android:id="@+id/ratings"
                style="@style/LargeCustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewReviews"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/filter_reviews"
            android:textAlignment="center"
            android:background="#efefef"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerReviews"
            android:layout_width="fill_parent"
            android:background="@drawable/filter_spinner_background"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:paddingTop="20dp"
            android:text=""
            android:textAlignment="center"
            android:background="#efefef"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateResults"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/filter_update_results"
            android:text="Update Results"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonClearFilters"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/filter_clear_filters"
            android:text="Clear Filters"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:paddingTop="20dp"
        android:text=""
        android:textAlignment="center"
        android:background="#efefef"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
</ScrollView>
