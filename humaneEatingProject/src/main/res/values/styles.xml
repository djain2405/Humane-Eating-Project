<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Material.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/primary_dark</item>

        <!-- DISABLE MULTITOUCH -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="DarkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="CollapsedAppBarTopic" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeCustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/large_rating_bar</item>
        <item name="android:indeterminateDrawable">@drawable/rating_star_1</item>
    </style>

    <style name="HEP_BottomSheetStyleDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="bottomSheetStyle">@style/HEP_BottomSheetModal</item>
    </style>

    <style name="HEP_BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HEP_TakeActionButtonTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/take_action_text_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="HEP_TakeActionImageStyle">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="HEP_TakeActionButtonStyle">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/take_action_button_color</item>
        <item name="android:gravity">left</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="HEP_FullScreenDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up2</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="HEP_BottomNavButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HEP_ActionBarButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
